<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="900.0" style="-fx-background-color: #f4f7f6;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DeleteItemFormController">
    <children>
        <AnchorPane prefHeight="90.0" prefWidth="900.0" style="-fx-background-color: #27ae60;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label layoutX="30.0" layoutY="28.0" text="REMOVE ITEM FROM SYSTEM" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>

        <AnchorPane layoutX="25.0" layoutY="120.0" prefHeight="430.0" prefWidth="850.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 4);">
            <children>
                <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="20.0" spacing="20.0">
                    <children>
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Search By" textFill="#7f8c8d">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <JFXComboBox fx:id="cmbSearchBy" onAction="#cmbSearchByOnAction" prefWidth="180.0" promptText="Select Type" />
                            </children>
                        </VBox>
                        <VBox spacing="5.0">
                            <children>
                                <Label fx:id="lblSearchInstruction" text="Item Details" textFill="#7f8c8d">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <JFXTextField fx:id="txtSearchValue" onAction="#txtSearchValueOnAction" prefWidth="450.0" promptText="Type item code or name..." />
                            </children>
                        </VBox>
                        <JFXButton fx:id="btnFind" onAction="#btnFindOnAction" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: #3498db; -fx-cursor: hand;" text="FIND" textFill="WHITE" translateY="10.0">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </JFXButton>
                    </children>
                </HBox>

                <TableView fx:id="tblItem" layoutX="20.0" layoutY="100.0" prefHeight="260.0" prefWidth="810.0">
                    <columns>
                        <TableColumn fx:id="colItemCode" prefWidth="100.0" text="Item Code" />
                        <TableColumn fx:id="colDescription" prefWidth="250.0" text="Description" />
                        <TableColumn fx:id="colPackSize" prefWidth="130.0" text="Pack Size" />
                        <TableColumn fx:id="colUnitPrice" prefWidth="160.0" text="Unit Price" />
                        <TableColumn fx:id="colQtyOnHand" prefWidth="168.0" text="Qty on Hand" />
                    </columns>
                </TableView>

                <Label layoutX="20.0" layoutY="375.0" text="Select a row above to enable the delete action." textFill="#e67e22">
                    <font>
                        <Font name="System Italic" size="13.0" />
                    </font>
                </Label>

                <JFXButton fx:id="btnDelete" layoutX="630.0" layoutY="370.0" onAction="#btnDeleteOnAction" prefHeight="45.0" prefWidth="200.0" style="-fx-background-color: #e74c3c; -fx-cursor: hand;" text="DELETE ITEM" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </JFXButton>
            </children>
        </AnchorPane>

        <JFXButton fx:id="btnBack" layoutX="25.0" layoutY="580.0" onAction="#btnBackOnAction" prefHeight="40.0" prefWidth="130.0" style="-fx-background-color: #7f8c8d; -fx-cursor: hand;" text="BACK" textFill="WHITE">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </JFXButton>
    </children>
</AnchorPane>