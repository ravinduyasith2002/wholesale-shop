<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="800.0" style="-fx-background-color: #f4f7f6;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AddCustomerFormController">
    <children>
        <AnchorPane prefHeight="90.0" prefWidth="800.0" style="-fx-background-color: #2c3e50;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label layoutX="30.0" layoutY="30.0" text="REGISTER NEW CUSTOMER" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>

        <AnchorPane layoutX="60.0" layoutY="120.0" prefHeight="430.0" prefWidth="680.0" style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 4);">
            <children>
                <GridPane hgap="30.0" layoutX="40.0" layoutY="25.0" prefWidth="600.0" vgap="12.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="10.0" prefWidth="120.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="35.0" prefHeight="35.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="35.0" prefHeight="35.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="35.0" prefHeight="35.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="35.0" prefHeight="35.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="35.0" prefHeight="35.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="35.0" prefHeight="35.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="35.0" prefHeight="35.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="35.0" prefHeight="35.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="35.0" prefHeight="35.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Customer ID" textFill="#95a5a6" />
                        <JFXTextField fx:id="txtCustomerId" editable="false" focusColor="#2c3e50" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" GridPane.columnIndex="1" />

                        <Label text="Title" GridPane.rowIndex="1" />
                        <JFXComboBox fx:id="cmbTitle" prefWidth="400.0" promptText="Select Title" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="Full Name" GridPane.rowIndex="2" />
                        <JFXTextField fx:id="txtName" onAction="#txxtNameOnAction" promptText="Enter Name" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label text="Date of Birth" GridPane.rowIndex="3" />
                        <DatePicker fx:id="dpDOB" prefWidth="400.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <Label text="Salary" GridPane.rowIndex="4" />
                        <JFXTextField fx:id="txtSalary" onAction="#txtSalaryOnAction" promptText="0.00" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                        <Label text="Address" GridPane.rowIndex="5" />
                        <JFXTextField fx:id="txtAddress" onAction="#txtAddressOnAction" promptText="Street Address" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                        <Label text="City" GridPane.rowIndex="6" />
                        <JFXTextField fx:id="txtCity" onAction="#txtCityOnAction" promptText="Colombo" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                        <Label text="Province" GridPane.rowIndex="7" />
                        <JFXTextField fx:id="txtProvince" onAction="#txtProvinceOnAction" promptText="Western" GridPane.columnIndex="1" GridPane.rowIndex="7" />

                        <Label text="Postal Code" GridPane.rowIndex="8" />
                        <JFXTextField fx:id="txtPostalCode" onAction="#txtPostalCodeOnAction" promptText="10000" GridPane.columnIndex="1" GridPane.rowIndex="8" />
                    </children>
                </GridPane>
            </children>
        </AnchorPane>

        <HBox alignment="CENTER" layoutX="60.0" layoutY="575.0" prefWidth="680.0" spacing="40.0">
            <children>
                <JFXButton fx:id="btnBack" onAction="#btnBackOnAction" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: #bdc3c7; -fx-background-radius: 5; -fx-cursor: hand;" text="Back">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </JFXButton>
                <JFXButton fx:id="btnAddCustomer" onAction="#btnAddCustomerOnAction" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: #27ae60; -fx-background-radius: 5; -fx-cursor: hand;" text="Save Customer" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </JFXButton>
            </children>
        </HBox>
    </children>
</AnchorPane>