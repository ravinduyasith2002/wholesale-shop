<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="900.0" style="-fx-background-color: #f4f7f6;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ViewSelectedCustomerFormController">
    <children>
        <AnchorPane prefHeight="90.0" prefWidth="900.0" style="-fx-background-color: #2c3e50;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label layoutX="30.0" layoutY="28.0" text="SEARCH CUSTOMER DETAILS" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>

        <AnchorPane layoutX="30.0" layoutY="115.0" prefHeight="100.0" prefWidth="840.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 4);">
            <children>
                <HBox alignment="CENTER_LEFT" layoutX="25.0" layoutY="20.0" spacing="20.0">
                    <children>
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Search By" textFill="#7f8c8d">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <JFXComboBox fx:id="cmbCustomerType" onAction="#cmbCustomerTypeOnAction" prefHeight="30.0" prefWidth="180.0" promptText="Select Type" />
                            </children>
                        </VBox>
                        <VBox spacing="5.0">
                            <children>
                                <Label fx:id="lblSearchingType" text="Search Value" textFill="#7f8c8d">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <JFXTextField fx:id="txtSearchText" onAction="#txtSearchTextOnAction" prefHeight="30.0" prefWidth="450.0" promptText="Type here to search..." />
                            </children>
                        </VBox>
                        <JFXButton fx:id="btnFind" onAction="#btnFindOnAction" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #3498db; -fx-cursor: hand;" text="FIND" textFill="WHITE" translateY="10.0">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </JFXButton>
                    </children>
                </HBox>
            </children>
        </AnchorPane>

        <TableView fx:id="tblCustomerDetails" layoutX="30.0" layoutY="240.0" prefHeight="320.0" prefWidth="840.0" style="-fx-background-radius: 5; -fx-border-color: #dcdde1;">
            <columns>
                <TableColumn fx:id="colCustomerID" prefWidth="70.0" text="ID" />
                <TableColumn fx:id="colCustomerTitle" prefWidth="60.0" text="Title" />
                <TableColumn fx:id="colCustomerName" prefWidth="150.0" text="Name" />
                <TableColumn fx:id="colCustomerDOB" prefWidth="90.0" text="DOB" />
                <TableColumn fx:id="colCustomerSalary" prefWidth="90.0" text="Salary" />
                <TableColumn fx:id="colCustomerAddress" prefWidth="110.0" text="Address" />
                <TableColumn fx:id="colCustomerCity" prefWidth="85.0" text="City" />
                <TableColumn fx:id="colCustomerProvince" prefWidth="100.0" text="Province" />
                <TableColumn fx:id="colCustomerPostalCode" prefWidth="85.0" text="Zip Code" />
            </columns>
        </TableView>

        <JFXButton fx:id="btnBack" layoutX="30.0" layoutY="585.0" onAction="#btnBackOnAction" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #7f8c8d; -fx-cursor: hand;" text="BACK" textFill="WHITE">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </JFXButton>
    </children>
</AnchorPane>