<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f4f7f6;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ItemMainMenuController">
    <children>
        <AnchorPane prefHeight="100.0" prefWidth="800.0" style="-fx-background-color: #27ae60;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label layoutX="30.0" layoutY="32.0" text="ITEM INVENTORY MANAGEMENT" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>

        <VBox alignment="CENTER" layoutX="225.0" layoutY="140.0" prefWidth="350.0" spacing="15.0">
            <children>
                <JFXButton fx:id="btnAddItem" onAction="#btnAddItemOnAction" prefHeight="65.0" prefWidth="350.0"
                           style="-fx-background-color: #ffffff; -fx-background-radius: 8; -fx-border-color: #dcdde1; -fx-border-radius: 8; -fx-cursor: hand;"
                           text="Add New Product" textFill="#2f3640">
                    <font>
                        <Font name="Segoe UI Semibold" size="18.0" />
                    </font>
                </JFXButton>

                <JFXButton fx:id="btnViewItem" onAction="#btnViewItemOnAction" prefHeight="65.0" prefWidth="350.0"
                           style="-fx-background-color: #ffffff; -fx-background-radius: 8; -fx-border-color: #dcdde1; -fx-border-radius: 8; -fx-cursor: hand;"
                           text="Stock View / Inventory" textFill="#2f3640">
                    <font>
                        <Font name="Segoe UI Semibold" size="18.0" />
                    </font>
                </JFXButton>

                <JFXButton fx:id="btnUpdateItem" onAction="#btnUpdateItemOnAction" prefHeight="65.0" prefWidth="350.0"
                           style="-fx-background-color: #ffffff; -fx-background-radius: 8; -fx-border-color: #dcdde1; -fx-border-radius: 8; -fx-cursor: hand;"
                           text="Update Item Details" textFill="#2f3640">
                    <font>
                        <Font name="Segoe UI Semibold" size="18.0" />
                    </font>
                </JFXButton>

                <JFXButton fx:id="btnDeleteItem" onAction="#btnDeleteItemOnAction" prefHeight="65.0" prefWidth="350.0"
                           style="-fx-background-color: #ffffff; -fx-background-radius: 8; -fx-border-color: #dcdde1; -fx-border-radius: 8; -fx-cursor: hand;"
                           text="Remove Item" textFill="#c0392b">
                    <font>
                        <Font name="Segoe UI Semibold" size="18.0" />
                    </font>
                </JFXButton>

                <AnchorPane prefHeight="20.0" />

                <JFXButton fx:id="btnBack" onAction="#btnBackOnAction" prefHeight="45.0" prefWidth="150.0"
                           style="-fx-background-color: #7f8c8d; -fx-background-radius: 5; -fx-cursor: hand;"
                           text="Back to Main" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </JFXButton>
            </children>
        </VBox>
    </children>
</AnchorPane>