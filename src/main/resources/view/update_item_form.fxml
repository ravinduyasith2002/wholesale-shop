<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="950.0" style="-fx-background-color: #f4f7f6;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UpdateItemFormController">
    <children>
        <AnchorPane prefHeight="80.0" prefWidth="950.0" style="-fx-background-color: #27ae60;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label layoutX="30.0" layoutY="22.0" text="UPDATE ITEM INFORMATION" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>

        <AnchorPane layoutX="25.0" layoutY="100.0" prefHeight="230.0" prefWidth="900.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 4);">
            <children>
                <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="15.0" spacing="20.0">
                    <children>
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Search By" textFill="#7f8c8d">
                                    <font> <Font name="System Bold" size="12.0" /> </font>
                                </Label>
                                <JFXComboBox fx:id="cmbSearchBy" onAction="#cmbSearchByOnAction" prefWidth="180.0" promptText="Select Type" />
                            </children>
                        </VBox>
                        <VBox spacing="5.0">
                            <children>
                                <Label fx:id="lblSearchInstruction" text="Search Value" textFill="#7f8c8d">
                                    <font> <Font name="System Bold" size="12.0" /> </font>
                                </Label>
                                <JFXTextField fx:id="txtSearchValue" onAction="#txtSearchValueOnAction" prefWidth="480.0" promptText="Enter Code or Description..." />
                            </children>
                        </VBox>
                        <JFXButton fx:id="btnFind" onAction="#btnFindOnAction" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: #3498db; -fx-cursor: hand;" text="FIND" textFill="WHITE" translateY="10.0">
                            <font> <Font name="System Bold" size="13.0" /> </font>
                        </JFXButton>
                    </children>
                </HBox>
                <TableView fx:id="tblItem" layoutX="20.0" layoutY="80.0" onMouseClicked="#tblItemSearchOnMouseClicked" prefHeight="130.0" prefWidth="860.0">
                    <columns>
                        <TableColumn fx:id="colItemCode" prefWidth="100.0" text="Item Code" />
                        <TableColumn fx:id="colDescription" prefWidth="250.0" text="Description" />
                        <TableColumn fx:id="colPackSize" prefWidth="150.0" text="Pack Size" />
                        <TableColumn fx:id="colUnitPrice" prefWidth="180.0" text="Unit Price" />
                        <TableColumn fx:id="colQtyOnHand" prefWidth="178.0" text="Qty on Hand" />
                    </columns>
                </TableView>
            </children>
        </AnchorPane>

        <AnchorPane layoutX="25.0" layoutY="350.0" prefHeight="260.0" prefWidth="900.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 4);">
            <children>
                <Label layoutX="20.0" layoutY="15.0" text="Edit Selected Item" textFill="#2c3e50">
                    <font> <Font name="System Bold" size="16.0" /> </font>
                </Label>
                <VBox layoutX="20.0" layoutY="55.0" spacing="25.0">
                    <children>
                        <HBox spacing="30.0">
                            <children>
                                <JFXTextField fx:id="txtItemCode" editable="false" labelFloat="true" prefWidth="150.0" promptText="Item Code" />
                                <JFXTextField fx:id="txtUpdateDescription" labelFloat="true" prefWidth="400.0" promptText="Description" />
                                <JFXTextField fx:id="txtUpdatePackSize" labelFloat="true" prefWidth="250.0" promptText="Pack Size" />
                            </children>
                        </HBox>
                        <HBox spacing="30.0">
                            <children>
                                <JFXTextField fx:id="txtUpdateUnitPrice" labelFloat="true" prefWidth="200.0" promptText="Unit Price" />
                                <JFXTextField fx:id="txtUpdateQty" labelFloat="true" prefWidth="200.0" promptText="Qty on Hand" />
                                <AnchorPane prefWidth="100.0" />
                                <JFXButton fx:id="btnUpdate" onAction="#btnUpdateOnAction" prefHeight="45.0" prefWidth="280.0" style="-fx-background-color: #2ecc71; -fx-cursor: hand;" text="SAVE CHANGES" textFill="WHITE">
                                    <font> <Font name="System Bold" size="15.0" /> </font>
                                </JFXButton>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </AnchorPane>

        <JFXButton fx:id="btnBack" layoutX="25.0" layoutY="635.0" onAction="#btnBackOnAction" prefHeight="40.0" prefWidth="130.0" style="-fx-background-color: #7f8c8d; -fx-cursor: hand;" text="BACK" textFill="WHITE">
            <font> <Font name="System Bold" size="14.0" /> </font>
        </JFXButton>
    </children>
</AnchorPane>
