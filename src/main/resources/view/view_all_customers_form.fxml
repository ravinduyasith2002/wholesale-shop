        </AnchorPane>

        <JFXButton fx:id="btnBack" layoutX="25.0" layoutY="585.0" onAction="#btnBackOnAction" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #7f8c8d; -fx-background-radius: 5; -fx-cursor: hand;" text="BACK" textFill="WHITE">
