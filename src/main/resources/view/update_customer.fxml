<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="950.0" style="-fx-background-color: #f4f7f6;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UpdateCustomerFormController">
    <children>
        <AnchorPane prefHeight="80.0" prefWidth="950.0" style="-fx-background-color: #2c3e50;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label layoutX="30.0" layoutY="25.0" text="UPDATE CUSTOMER INFORMATION" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="22.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>

        <AnchorPane layoutX="25.0" layoutY="100.0" prefHeight="240.0" prefWidth="900.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 4);">
            <children>
                <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="15.0" spacing="20.0">
                    <children>
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Search By" textFill="#7f8c8d" />
                                <JFXComboBox fx:id="cmbCustomerType" onAction="#cmbCustomerTypeOnAction" prefHeight="30.0" prefWidth="150.0" />
                            </children>
                        </VBox>
                        <VBox spacing="5.0">
                            <children>
                                <Label fx:id="lblSearchingType" text="Search Value" textFill="#7f8c8d" />
                                <JFXTextField fx:id="txtSearchText" onAction="#txtSearchTextOnAction" prefHeight="30.0" prefWidth="400.0" promptText="Enter ID or Name..." />
                            </children>
                        </VBox>
                        <JFXButton fx:id="btnFind" onAction="#btnFindOnAction" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #3498db; -fx-cursor: hand;" text="FIND" textFill="WHITE" translateY="10.0">
                            <font><Font name="System Bold" size="13.0" /></font>
                        </JFXButton>
                    </children>
                </HBox>

                <TableView fx:id="tblCustomerDetails" layoutX="20.0" layoutY="75.0" prefHeight="140.0" prefWidth="860.0">
                    <columns>
                        <TableColumn fx:id="colCustomerID" prefWidth="60.0" text="ID" />
                        <TableColumn fx:id="colCustomerTitle" prefWidth="60.0" text="Title" />
                        <TableColumn fx:id="colCustomerName" prefWidth="150.0" text="Name" />
                        <TableColumn fx:id="colCustomerDOB" prefWidth="90.0" text="DOB" />
                        <TableColumn fx:id="colCustomerSalary" prefWidth="90.0" text="Salary" />
                        <TableColumn fx:id="colCustomerAddress" prefWidth="120.0" text="Address" />
                        <TableColumn fx:id="colCustomerCity" prefWidth="85.0" text="City" />
                        <TableColumn fx:id="colCustomerProvince" prefWidth="105.0" text="Province" />
                        <TableColumn fx:id="colCustomerPostalCode" prefWidth="85.0" text="Postal" />
                    </columns>
                </TableView>
            </children>
        </AnchorPane>

        <AnchorPane layoutX="25.0" layoutY="360.0" prefHeight="230.0" prefWidth="900.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 4);">
            <children>
                <Label layoutX="20.0" layoutY="10.0" text="Edit Selected Customer" textFill="#2c3e50">
                    <font><Font name="System Bold" size="14.0" /></font>
                </Label>

                <HBox layoutX="20.0" layoutY="45.0" spacing="15.0">
                    <children>
                        <VBox spacing="5.0"><Label text="ID" textFill="#95a5a6"/><JFXTextField fx:id="txtID" editable="false" prefWidth="55.0" /></VBox>
                        <VBox spacing="5.0"><Label text="Title" textFill="#95a5a6"/><JFXComboBox fx:id="cmbTitle" prefWidth="90.0" /></VBox>
                        <VBox spacing="5.0"><Label text="Full Name" textFill="#95a5a6"/><JFXTextField fx:id="txtName" prefWidth="240.0" /></VBox>
                        <VBox spacing="5.0"><Label text="Address" textFill="#95a5a6"/><JFXTextField fx:id="txtAddress" prefWidth="240.0" /></VBox>
                        <VBox spacing="5.0"><Label text="DOB" textFill="#95a5a6"/><DatePicker fx:id="dateDOB" prefWidth="120.0" /></VBox>
                    </children>
                </HBox>

                <HBox layoutX="20.0" layoutY="120.0" spacing="15.0">
                    <children>
                        <VBox spacing="5.0"><Label text="Salary" textFill="#95a5a6"/><JFXTextField fx:id="txtSalary" prefWidth="140.0" /></VBox>
                        <VBox spacing="5.0"><Label text="City" textFill="#95a5a6"/><JFXTextField fx:id="txtCity" prefWidth="180.0" /></VBox>
                        <VBox spacing="5.0"><Label text="Province" textFill="#95a5a6"/><JFXComboBox fx:id="cmbProvince" prefWidth="180.0" /></VBox>
                        <VBox spacing="5.0"><Label text="Postal Code" textFill="#95a5a6"/><JFXTextField fx:id="txtPostalCode" prefWidth="100.0" /></VBox>
                        <JFXButton fx:id="btnUpdate" onAction="#btnUpdateOnAction" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #27ae60; -fx-cursor: hand;" text="SAVE CHANGES" textFill="WHITE" translateY="18.0">
                            <font><Font name="System Bold" size="13.0" /></font>
                        </JFXButton>
                    </children>
                </HBox>
            </children>
        </AnchorPane>

        <JFXButton fx:id="btnBack" layoutX="25.0" layoutY="615.0" onAction="#btnBackOnAction" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #7f8c8d; -fx-cursor: hand;" text="BACK" textFill="WHITE">
            <font><Font name="System Bold" size="13.0" /></font>
        </JFXButton>
    </children>
</AnchorPane>