<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f4f7f6;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ViewCustomerMainController">
    <children>
        <AnchorPane prefHeight="100.0" prefWidth="800.0" style="-fx-background-color: #2c3e50;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label layoutX="30.0" layoutY="32.0" text="VIEW CUSTOMER REPORTS" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>

        <VBox alignment="CENTER" layoutX="210.0" layoutY="160.0" prefWidth="380.0" spacing="20.0">
            <children>
                <JFXButton fx:id="btnViewSelectedCustomer" onAction="#btnViewSelectedCustomerOnAction" prefHeight="80.0" prefWidth="380.0"
                           style="-fx-background-color: #ffffff; -fx-background-radius: 10; -fx-border-color: #dcdde1; -fx-border-radius: 10; -fx-cursor: hand;"
                           text="Search &amp; View Customer" textFill="#2f3640">
                    <font>
                        <Font name="Segoe UI Semibold" size="20.0" />
                    </font>
                </JFXButton>

                <JFXButton fx:id="btnViewAllCustomers" onAction="#btnViewAllCustomersOnAction" prefHeight="80.0" prefWidth="380.0"
                           style="-fx-background-color: #ffffff; -fx-background-radius: 10; -fx-border-color: #dcdde1; -fx-border-radius: 10; -fx-cursor: hand;"
                           text="All Customers List" textFill="#2f3640">
                    <font>
                        <Font name="Segoe UI Semibold" size="20.0" />
                    </font>
                </JFXButton>

                <AnchorPane prefHeight="40.0" />

                <JFXButton fx:id="btnBack" onAction="#btnBackOnAction" prefHeight="45.0" prefWidth="150.0"
                           style="-fx-background-color: #7f8c8d; -fx-background-radius: 5; -fx-cursor: hand;"
                           text="Back" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </JFXButton>
            </children>
        </VBox>

        <Label layoutX="324.0" layoutY="555.0" text="Select a view mode to continue" textFill="#95a5a6">
            <font>
                <Font name="System Italic" size="12.0" />
            </font>
        </Label>
    </children>
</AnchorPane>