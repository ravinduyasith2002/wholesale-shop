<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="900.0" style="-fx-background-color: #f4f7f6;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ViewAllItemsFormController">
    <children>
        <AnchorPane prefHeight="100.0" prefWidth="900.0" style="-fx-background-color: #27ae60;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label layoutX="30.0" layoutY="32.0" text="FULL STOCK MASTER LIST" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>

        <AnchorPane layoutX="30.0" layoutY="130.0" prefHeight="420.0" prefWidth="840.0" style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 4);">
            <children>
                <TableView fx:id="tblItemDetails" layoutX="20.0" layoutY="20.0" prefHeight="380.0" prefWidth="800.0" style="-fx-border-color: #dcdde1; -fx-background-color: white;">
                    <columns>
                        <TableColumn fx:id="colItemCode" prefWidth="100.0" text="Item Code" />
                        <TableColumn fx:id="colDescription" prefWidth="240.0" text="Description" />
                        <TableColumn fx:id="colPackSize" prefWidth="140.0" text="Pack Size" />
                        <TableColumn fx:id="colUnitPrice" prefWidth="160.0" text="Unit Price (Rs.)" />
                        <TableColumn fx:id="colQtyOnHand" prefWidth="158.0" text="Qty On Hand" />
                    </columns>
                </TableView>
            </children>
        </AnchorPane>

        <HBox alignment="CENTER_LEFT" layoutX="30.0" layoutY="575.0" prefWidth="840.0" spacing="20.0">
            <children>
                <JFXButton fx:id="btnBack" onAction="#btnBackOnAction" prefHeight="45.0" prefWidth="140.0" style="-fx-background-color: #7f8c8d; -fx-cursor: hand;" text="BACK" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </JFXButton>
                <Label text="* Displaying all currently registered items in the inventory." textFill="#95a5a6">
                    <font>
                        <Font name="System Italic" size="13.0" />
                    </font>
                </Label>
            </children>
        </HBox>
    </children>
</AnchorPane>